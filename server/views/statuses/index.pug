extends ../layouts/application.pug

block content
  a(href=route('newStatus') class="nav-link")= t('views.statuses.createStatus')
  table.table.table-striped
    thead
      tr
        th= t('views.statuses.id')
        th= t('views.statuses.name')
        th= t('views.statuses.createdAt')
        th
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            a(href=route('editStatus', { id: `${status.id}` }))= t('views.statuses.editStatus')
            +buttonTo(route('deleteStatus', { id: `${status.id}` }), 'delete')(class="btn btn-link" value=t('views.statuses.deleteStatus'))
