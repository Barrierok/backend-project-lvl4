extends ../layouts/application.pug

block content
  a(href=route('newLabel') class="nav-link")= t('views.labels.createLabel')
  table.table.table-striped
    thead
      tr
        th= t('views.labels.id')
        th= t('views.labels.name')
        th= t('views.labels.createdAt')
        th
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            a(href=route('editLabel', { id: `${label.id}` }))= t('layouts.application.edit')
            +buttonTo(route('deleteLabel', { id: `${label.id}` }), 'delete')(class="btn btn-link" value=t('layouts.application.delete'))
